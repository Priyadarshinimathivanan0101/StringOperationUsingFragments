<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_A"
    android:orientation="vertical"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:layout_gravity="center_vertical">
    <TextView
        android:id="@+id/activity1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="String Operation"
        android:layout_margin="36dp"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/reverseButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity1"
        android:layout_alignParentRight="true"
        android:text="Reverse"
        android:textSize="20dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/splitButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/activity1"
        android:text="Split"
        android:textSize="20dp" />

    <Button
        android:id="@+id/appendButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splitButton"
        android:layout_marginTop="20dp"
        android:text="Append"
        android:textSize="20dp" />

    <Button
        android:id="@+id/splitcomButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reverseButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="Split by comma"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:visibility="gone"
        android:layout_below="@id/activity1"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/resultText"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="#3369FF"
        android:textSize="34sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/optionButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/result"
        android:text="Show Option"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        />

</RelativeLayout>
</ScrollView>